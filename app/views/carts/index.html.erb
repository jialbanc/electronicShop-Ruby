<h1>Listing carts</h1>

<table>
  <thead>
    <tr>
      <th>Numitem</th>
      <th>Total</th>
      <th>Purchased</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.numitem %></td>
        <td><%= cart.total %></td>
        <td><%= cart.purchased %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

