<h1>Listing items</h1>

<ul>
	<% @items.each do |item| %>
		<li>
			<h1><%= item.nombreitem %></h1>
			<h3><%= item.code  %></h3>
			<h2><%= item.descripcion  %></h1>
			<h2><%= item.color  %></h1>
			<h2>$<%= item.valor  %></h1>
			<a><%= link_to 'Show', item %></a>
			<a><%= link_to 'Edit', edit_item_path(item) %></a>
			<a><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></a>
		</li>
	<% end %>
</ul>

<br>

<%= link_to 'New Item', new_item_path %>
