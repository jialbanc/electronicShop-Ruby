<h1>Listing items</h1>

	<% @items.each do |item| %>
		<div id='items'>
			<div class='panel panel-info'>
				<div class='panel-heading'>
					<h2><%= item.nombreitem %></h2>
				</div>
				<div class='panel-body'>
				<h3>Codigo: <%= item.code  %></h3>
				<h2><%= item.descripcion  %></h1>
				<h2>Color: <%= item.color  %></h1>
				<h2>Precio: $<%= item.valor  %></h1>
				</div>
				<div class='btn-group'>
					<% cart = Cart.find(1) %>
					<%= link_to 'Add to Cart', cart,  method: :add_to_cart , class:'btn btn-default' %>
					<%= link_to 'Show', item , class:'btn btn-default' %>
					<%= link_to 'Edit', edit_item_path(item) , class:'btn btn-default' %>
					<%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-default' %>
				</div>
			</div>
			
		</div>
	<% end %>
</ul>

