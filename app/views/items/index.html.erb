<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Nombreitem</th>
      <th>Descripcion</th>
      <th>Color</th>
      <th>Valor</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.code %></td>
        <td><%= item.nombreitem %></td>
        <td><%= item.descripcion %></td>
        <td><%= item.color %></td>
        <td><%= item.valor %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

